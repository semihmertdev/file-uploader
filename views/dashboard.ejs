<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard | CloudS</title>
  <!-- Bootstrap CSS -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome for icons -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .sidebar {
      height: 100vh;
      width: 250px;
      position: fixed;
      top: 0;
      left: 0;
      background-color: #007bff;
      color: white;
      padding: 20px;
      box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
    }
    .sidebar h2 {
      text-align: center;
      margin-bottom: 30px;
    }
    .sidebar .btn {
      width: 100%;
      margin-bottom: 10px;
      color: #007bff;
      background-color: white;
      border: none;
    }
    .sidebar .list-group-item {
      background-color: transparent;
      border: none;
      color: white;
      padding: 10px 15px;
    }
    .sidebar .list-group-item:hover {
      background-color: rgba(255, 255, 255, 0.1);
    }
    .sidebar .list-group-item a {
      color: white;
      text-decoration: none;
    }
    .content {
      margin-left: 250px;
      padding: 30px;
    }
    .card {
      border-radius: 1rem;
      overflow: hidden;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      margin-bottom: 20px;
    }
    .card-header {
      background-color: #007bff;
      color: white;
      font-weight: bold;
      text-align: center;
      padding: 1rem;
    }
    .card-body {
      padding: 2rem;
    }
    .btn-icon {
      margin-right: 0.5rem;
    }
    .file-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 15px;
      border-bottom: 1px solid #eee;
    }
    .file-item:last-child {
      border-bottom: none;
    }
    .file-icon {
      font-size: 2rem;
      color: #007bff;
      margin-right: 1rem;
    }
    .upload-overlay {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
      z-index: 1000;
    }
    .upload-form {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background-color: white;
      padding: 30px;
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    .custom-file-input {
  visibility: hidden;
  width: 0;
}

.custom-file-label {
  display: inline-block;
  width: 100%;
  padding: 10px;
  font-size: 1rem;
  font-weight: 500;
  color: #007bff;
  background-color: #fff;
  border: 2px solid #007bff;
  border-radius: 5px;
  cursor: pointer;
  text-align: center;
}

.custom-file-label:hover {
  background-color: #007bff;
  color: white;
}

.form-control-file{
  display: flex;
  justify-content: center;
  align-items: center;
}

  </style>
</head>
<body>
  <div class="sidebar">
    <h2>Folders</h2>
    <button class="btn btn-light" data-toggle="modal" data-target="#createFolderModal">
      <i class="fas fa-folder-plus btn-icon"></i>Create Folder
    </button>
    <div class="list-group mt-4">
      <% if (allFilesFolder) { %>
        <div class="list-group-item folder-item" data-folder-id="<%= allFilesFolder.id %>">
          <a href="/dashboard?folderId=<%= allFilesFolder.id %>">
            <i class="fas fa-folder btn-icon"></i>All Files
          </a>
        </div>
      <% } %>

      <% folders.forEach(folder => { %>
        <% if (folder.name !== 'Trash' && folder.name !== 'All Files') { %>
          <div class="list-group-item folder-item" data-folder-id="<%= folder.id %>">
            <a href="/dashboard?folderId=<%= folder.id %>">
              <i class="fas fa-folder btn-icon"></i><%= folder.name %>
            </a>
            <i class="fas fa-edit float-right" data-toggle="modal" data-target="#folderModal" data-folder-id="<%= folder.id %>" data-folder-name="<%= folder.name %>"></i>
          </div>          
        <% } %>
      <% }) %>

      <% if (trashFolder) { %>
        <div class="list-group-item trash-item">
          <a href="/dashboard?folderId=<%= trashFolder.id %>">
            <i class="fas fa-trash-alt btn-icon"></i>Trash
          </a>
        </div>
      <% } %>
    </div>
  </div>

  <div class="content">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>Dashboard</h1>
      <a href="/logout" class="btn btn-danger">
        <i class="fas fa-sign-out-alt btn-icon"></i>Logout
      </a>
    </div>

    <% if (messages.success || messages.error) { %>
      <div class="card mb-4">
        <div class="card-body">
          <% if (messages.success) { %>
            <div class="alert alert-success" role="alert">
              <%= messages.success %>
            </div>
          <% } %>
          
          <% if (messages.error) { %>
            <div class="alert alert-danger" role="alert">
              <%= messages.error %>
            </div>
          <% } %>
        </div>
      </div>
    <% } %>

    <div class="card">
      <div class="card-header">
        <h2 class="mb-0">Files in <%= selectedFolder.name || 'Selected Folder' %></h2>
      </div>
      <div class="card-body">
        <% if (selectedFolder && selectedFolder.name !== 'Trash') { %>
          <button class="btn btn-primary mb-4" onclick="showUploadOverlay('<%= selectedFolder.id %>', '<%= selectedFolder.name %>')">
            <i class="fas fa-upload btn-icon"></i>Upload File
          </button>
        <% } %>
        
        <div id="files-container" class="file-list">
          <% if (selectedFolder && selectedFolder.files && selectedFolder.files.length > 0) { %>
            <% selectedFolder.files.forEach(file => { %>
              <div class="file-item">
                <div>
                  <i class="fas fa-file file-icon"></i>
                  <a href="/files/<%= file.id %>/details"><%= file.name %></a>
                </div>
                <div>
                  <% if (selectedFolder.name === 'Trash') { %>
                    <form action="/files/<%= file.id %>/restore" method="post" class="d-inline">
                      <button type="submit" class="btn btn-success btn-sm">
                        <i class="fas fa-undo btn-icon"></i>Restore
                      </button>
                    </form>
                    <form action="/files/<%= file.id %>/permanent-delete" method="post" class="d-inline">
                      <button type="submit" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash-alt btn-icon"></i>Permanently Delete
                      </button>
                    </form>
                  <% } else { %>
                    <form action="/files/<%= file.id %>/delete" method="POST" class="d-inline">
                      <button type="submit" class="btn btn-warning btn-sm">
                        <i class="fas fa-trash btn-icon"></i>Move to Trash
                      </button>
                    </form>
                    <form action="/files/<%= file.id %>/download" method="POST" class="d-inline">
                      <button type="submit" class="btn btn-info btn-sm">
                        <i class="fas fa-download btn-icon"></i>Download
                      </button>
                    </form>
                  <% } %>
                </div>
              </div>
            <% }) %>
          <% } else { %>
            <p class="text-muted">No files found.</p>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <!-- Create Folder Modal -->
  <div class="modal fade" id="createFolderModal" tabindex="-1" role="dialog" aria-labelledby="createFolderModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="createFolderModalLabel">Create Folder</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <form action="/folders/create" method="POST">
          <div class="modal-body">
            <div class="form-group">
              <label for="folderName">Folder Name</label>
              <input type="text" class="form-control" id="folderName" name="folderName" required>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Create Folder</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Edit Folder Modal -->
  <div class="modal fade" id="folderModal" tabindex="-1" role="dialog" aria-labelledby="folderModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="folderModalLabel">Edit Folder</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <form action="/folders/edit" method="POST">
          <div class="modal-body">
            <input type="hidden" id="editFolderId" name="folderId">
            <div class="form-group">
              <label for="editFolderName">Folder Name</label>
              <input type="text" class="form-control" id="editFolderName" name="folderName" required>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Save Changes</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Upload Overlay -->
  <div id="uploadOverlay" class="upload-overlay">
    <div class="upload-form">
      <h3>Upload to <span id="uploadFolderName"></span></h3>
      <form id="uploadForm" action="/upload" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <input type="file" name="file" class="form-control-file form-control-sm" required>
        </div>
        <input type="hidden" name="folderId" id="uploadFolderId">
        <button type="submit" class="btn btn-primary">Upload</button>
        <button type="button" class="btn btn-secondary" onclick="closeUploadOverlay()">Cancel</button>
      </form>
    </div>
  </div>

  <!-- Bootstrap JS and dependencies -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script>
    // Update folder modal fields when opened
    $('#folderModal').on('show.bs.modal', function (event) {
      const button = $(event.relatedTarget);
      const folderId = button.data('folder-id');
      const folderName = button.data('folder-name');
      
      const modal = $(this);
      modal.find('#editFolderId').val(folderId);
      modal.find('#editFolderName').val(folderName);
    });

    function showUploadOverlay(folderId, folderName) {
      document.getElementById('uploadOverlay').style.display = 'block';
      document.getElementById('uploadFolderId').value = folderId;
      document.getElementById('uploadFolderName').textContent = folderName;
    }

    function closeUploadOverlay() {
      document.getElementById('uploadOverlay').style.display = 'none';
    }

    // Add click event listeners to folder items
    document.querySelectorAll('.folder-item').forEach(item => {
  item.addEventListener('click', function(event) {
    if (!event.target.closest('a') && !event.target.closest('.fa-edit')) {
      const folderId = this.getAttribute('data-folder-id');
      
      // Yeni rota için yönlendirme
      window.location.href = `/dashboard?folderId=${folderId}`;
    }
  });
});
document.querySelectorAll('.trash-item').forEach(item => {
  item.addEventListener('click', function(event) {
    // Varsayılan bağlantı tıklama davranışını engelle
    event.preventDefault();
    
    // Tıklanan öğedeki `a` etiketinden href değerini al ve rotaya yönlendir
    const targetUrl = this.querySelector('a').getAttribute('href');
    window.location.href = targetUrl;
  });
});



  </script>
</body>
</html>