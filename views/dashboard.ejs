<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard</title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    .btn-primary {
      background-color: #2F4F4F;
      border-color: #2F4F4F;
    }

    .btn-secondary {
      background-color: #4F6F6F;
      border-color: #4F6F6F;
    }

    .btn-danger {
      background-color: #A52A2A;
      border-color: #A52A2A;
    }

    .btn-success {
      background-color: #3CB371;
      border-color: #3CB371;
    }

    .custom-file-upload {
      padding: 10px 20px;
      font-size: 16px;
      cursor: pointer;
    }

    .custom-file-upload:hover {
      background-color: #317145;
    }

    .custom-file-upload input[type="file"] {
      display: none;
    }

    .btn {
      padding: 10px 20px;
      min-width: 150px;
      text-align: center;
    }

    .sidebar {
      height: 100vh;
      width: 250px;
      position: fixed;
      top: 0;
      left: 0;
      background-color: #f8f9fa;
      border-right: 1px solid #ddd;
      padding: 15px;
      box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
    }

    .sidebar .btn {
      width: 100%;
      margin-bottom: 10px;
    }

    .sidebar .list-group-item {
      padding: 10px;
    }

    .content {
      margin-left: 260px;
      padding: 20px;
    }

    .modal-footer {
      display: flex;
      justify-content: center;
      padding-top: 0;
    }

    .modal-footer .btn {
      margin-right: 10px;
    }

    .modal-footer .btn:last-child {
      margin-right: 0;
    }
  </style>
</head>
<body>
  <div class="sidebar">
    <h2 class="my-4">Folders</h2>
    <button class="btn btn-primary" data-toggle="modal" data-target="#createFolderModal">Create Folder</button>
    <div class="list-group">
      <% if (allFilesFolder) { %>
        <div class="list-group-item">
          <h5 class="mb-1">
            <a href="/dashboard?folderId=<%= allFilesFolder.id %>">All Files</a>
          </h5>
        </div>
      <% } %>

      <% if (trashFolder) { %>
        <div class="list-group-item">
          <h5 class="mb-1">
            <a href="/dashboard?folderId=<%= trashFolder.id %>">Trash</a>
          </h5>
        </div>
      <% } %>

      <% folders.forEach(folder => { %>
        <% if (folder.name !== 'Trash' && folder.name !== 'All Files') { %>
          <div class="list-group-item">
            <div class="d-flex justify-content-between align-items-center">
              <h5 class="mb-1">
                <a href="/dashboard?folderId=<%= folder.id %>"><%= folder.name %></a>
              </h5>
              <button type="button" class="btn btn-secondary btn-sm" data-toggle="modal" data-target="#folderModal" data-folder-id="<%= folder.id %>" data-folder-name="<%= folder.name %>">...</button>
            </div>
          </div>          
        <% } %>
      <% }) %>
    </div>
  </div>

  <div class="content">
    <div class="d-flex justify-content-between align-items-center">
      <h1 class="my-4">Dashboard</h1>
      <a href="/logout" class="btn btn-danger">Logout</a>
    </div>

    <% if (messages.success) { %>
      <div class="alert alert-success" role="alert">
        <%= messages.success %>
      </div>
    <% } %>
    
    <% if (messages.error) { %>
      <div class="alert alert-danger" role="alert">
        <%= messages.error %>
      </div>
    <% } %>

    <!-- File Upload Form -->
    <form action="/upload" method="post" enctype="multipart/form-data" class="mb-4">
      <div class="form-group">
        <label for="file" class="btn btn-primary custom-file-upload">
          <input type="file" name="file" id="file" class="d-none"> Choose File
        </label>
        <span id="file-selected" class="ml-2 text-muted">No file chosen</span>
      </div>
      
      <div class="form-group">
        <label for="folder">Select Folder:</label>
        <select name="folderId" id="folder" class="form-control" required>
          <% folders.forEach(folder => { %>
            <% if (folder.name !== 'Trash') { %>
              <option value="<%= folder.id %>"><%= folder.name %></option>
            <% } %>
          <% }) %>
        </select>
      </div>
      <button type="submit" class="btn btn-primary">Upload</button>
    </form>

    <!-- Files in Selected Folder -->
    <h2 class="my-4">Files in <%= selectedFolder.name || 'Selected Folder' %></h2>
    <div id="files-container">
      <% if (selectedFolder && selectedFolder.files && selectedFolder.files.length > 0) { %>
        <div class="list-group">
          <% selectedFolder.files.forEach(file => { %>
            <div class="list-group-item">
              <div class="d-flex justify-content-between align-items-center">
                <span>
                  <a href="/files/<%= file.id %>/details"><%= file.name %></a>
                </span>
                <div>
                  <% if (selectedFolder.name === 'Trash') { %>
                    <form action="/files/<%= file.id %>/restore" method="post" class="d-inline">
                      <button type="submit" class="btn btn-success btn-sm">Restore</button>
                    </form>
                    <form action="/files/<%= file.id %>/permanent-delete" method="post" class="d-inline">
                      <button type="submit" class="btn btn-danger btn-sm">Permanently Delete</button>
                    </form>
                  <% } else { %>
                    <form action="/files/<%= file.id %>/delete" method="POST" class="d-inline">
                      <button type="submit" class="btn btn-warning btn-sm">Move to Trash</button>
                    </form>
                    <a href="/files/<%= file.id %>/download" class="btn btn-primary btn-sm">Download</a>
                  <% } %>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <p>No files in this folder.</p>
      <% } %>
    </div>
  </div>

  <!-- Create Folder Modal -->
  <div id="createFolderModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Create New Folder</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form id="createFolderForm" action="/folders" method="post">
            <div class="form-group">
              <label for="name">Folder Name</label>
              <input type="text" id="name" name="name" class="form-control" required>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <button type="submit" form="createFolderForm" class="btn btn-primary">Create Folder</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Folder Actions Modal -->
  <div id="folderModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Folder Actions</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <p id="folderName"></p>

          <!-- Rename Folder Form -->
          <form id="renameFolderForm" method="POST">
            <div class="form-group">
              <label for="newFolderName">New Folder Name</label>
              <input type="text" id="newFolderName" name="newFolderName" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary">Rename Folder</button>
          </form>

          <!-- Delete Folder Form -->
          <form id="deleteFolderForm" method="POST" class="mt-3">
            <button type="submit" class="btn btn-danger">Delete Folder</button>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS and dependencies -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script>
    $('#folderModal').on('show.bs.modal', function (event) {
      var button = $(event.relatedTarget);
      var folderId = button.data('folder-id');
      var folderName = button.data('folder-name');

      var modal = $(this);
      modal.find('#folderName').text(folderName);

      // Update the form actions with the correct folder ID
      modal.find('#renameFolderForm').attr('action', '/folders/' + folderId + '/rename');
      modal.find('#deleteFolderForm').attr('action', '/folders/' + folderId + '/delete');
    });

    // Update the file input label when a file is selected
    $('#file').change(function() {
      var fileName = $(this).val().split('\\').pop();
      $('#file-selected').text(fileName || 'No file chosen');
    });
  </script>
</body>
</html>